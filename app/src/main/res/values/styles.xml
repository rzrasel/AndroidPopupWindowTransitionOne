<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogAnimLeftToRight" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/dialog_left_to_right_off</item>
        <item name="android:windowEnterAnimation">@anim/dialog_left_to_right_on</item>
    </style>
    <style name="DialogAnimRightToLeft" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/dialog_right_to_left_off</item>
        <item name="android:windowEnterAnimation">@anim/dialog_right_to_left_on</item>
    </style>
    <style name="DialogAnimTopToBottom" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/dialog_top_to_bottom_off</item>
        <item name="android:windowEnterAnimation">@anim/dialog_top_to_bottom_on</item>
    </style>
    <style name="DialogAnimBottomTop" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/dialog_bottom_to_top_off</item>
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_to_top_on</item>
    </style>
    <style name="DialogAnimCustom" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/dialog_custom_off</item>
        <item name="android:windowEnterAnimation">@anim/dialog_custom_on</item>
    </style>
</resources>